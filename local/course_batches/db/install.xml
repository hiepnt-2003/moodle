<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/course_batches/db" VERSION="20250925" COMMENT="XMLDB file for Moodle local/course_batches"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
  <TABLES>
    <TABLE NAME="local_course_batches" COMMENT="Bảng lưu trữ thông tin đợt mở môn">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="batch_name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Tên đợt mở môn"/>
        <FIELD NAME="start_date" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Ngày bắt đầu học (timestamp)"/>
        <FIELD NAME="created_date" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Ngày tạo record (timestamp)"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="start_date_idx" UNIQUE="false" FIELDS="start_date"/>
        <INDEX NAME="batch_name_idx" UNIQUE="false" FIELDS="batch_name"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_course_batch_courses" COMMENT="Bảng liên kết giữa đợt mở môn và khóa học">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="batchid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID đợt mở môn"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID khóa học"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Thời gian thêm vào đợt"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="batchid" TYPE="foreign" FIELDS="batchid" REFTABLE="local_course_batches" REFFIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="batchid_idx" UNIQUE="false" FIELDS="batchid"/>
        <INDEX NAME="courseid_idx" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="batch_course" UNIQUE="true" FIELDS="batchid,courseid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>