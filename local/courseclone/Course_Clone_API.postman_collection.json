{
	"info": {
		"_postman_id": "course-clone-api-collection",
		"name": "Course Clone API",
		"description": "Collection for testing Course Clone webservice in Moodle",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Clone Course",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Set current timestamp for dates",
							"const now = Math.floor(Date.now() / 1000);",
							"const futureDate = now + (30 * 24 * 60 * 60); // 30 days from now",
							"",
							"pm.environment.set('startdate', now);",
							"pm.environment.set('enddate', futureDate);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "wstoken",
							"value": "{{wstoken}}",
							"description": "Your webservice token"
						},
						{
							"key": "wsfunction",
							"value": "local_courseclone_clone_course",
							"description": "Webservice function name"
						},
						{
							"key": "moodlewsrestformat",
							"value": "json",
							"description": "Response format"
						},
						{
							"key": "shortname_clone",
							"value": "{{source_shortname}}",
							"description": "Shortname of source course to clone"
						},
						{
							"key": "fullname",
							"value": "{{new_fullname}}",
							"description": "Full name for new course"
						},
						{
							"key": "shortname",
							"value": "{{new_shortname}}",
							"description": "Short name for new course"
						},
						{
							"key": "startdate",
							"value": "{{startdate}}",
							"description": "Start date timestamp"
						},
						{
							"key": "enddate",
							"value": "{{enddate}}",
							"description": "End date timestamp"
						}
					]
				},
				"url": {
					"raw": "{{moodle_url}}/webservice/rest/server.php",
					"host": [
						"{{moodle_url}}"
					],
					"path": [
						"webservice",
						"rest",
						"server.php"
					]
				},
				"description": "Clone a course with new details"
			},
			"response": [
