{
    "info": {
        "name": "Moodle User Creation API",
        "description": "Collection for testing Moodle User Creation Web Service",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "noauth"
    },
    "item": [
        {
            "name": "Create User - Auto Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "wstoken",
                            "value": "YOUR_TOKEN_HERE",
                            "description": "Replace with your web service token"
                        },
                        {
                            "key": "wsfunction",
                            "value": "local_usercreation_create_user"
                        },
                        {
                            "key": "moodlewsrestformat",
                            "value": "json"
                        },
                        {
                            "key": "username",
                            "value": "newuser123"
                        },
                        {
                            "key": "firstname",
                            "value": "John"
                        },
                        {
                            "key": "lastname",
                            "value": "Doe"
                        },
                        {
                            "key": "email",
                            "value": "john.doe@example.com"
                        },
                        {
                            "key": "createpassword",
                            "value": "1"
                        },
                        {
                            "key": "password",
                            "value": ""
                        }
                    ]
                },
                "url": {
                    "raw": "{{moodle_url}}/webservice/rest/server.php",
                    "host": [
                        "{{moodle_url}}"
                    ],
                    "path": [
                        "webservice",
                        "rest",
                        "server.php"
                    ]
                },
                "description": "Creates a new user with auto-generated password"
            }
        },
        {
            "name": "Create User - Manual Password",
            "request": {
                "method": "POST",
                "header": [
