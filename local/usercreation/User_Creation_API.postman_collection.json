                        },
                        {
                            "key": "wsfunction",
                            "value": "local_usercreation_create_user"
                        },
                        {
                            "key": "moodlewsrestformat",
                            "value": "json"
                        },
                        {
                            "key": "username",
                            "value": "manualuser456"
                        },
                        {
                            "key": "firstname",
                            "value": "Jane"
                        },
                        {
                            "key": "lastname",
                            "value": "Smith"
                        },
                        {
                            "key": "email",
                            "value": "jane.smith@example.com"
                        },
                        {
                            "key": "createpassword",
                            "value": "0"
                        },
                        {
                            "key": "password",
                            "value": "MyStrongPass123!"
                        }
                    ]
                },
                "url": {
                    "raw": "{{moodle_url}}/webservice/rest/server.php",
                    "host": [
                        "{{moodle_url}}"
                    ],
                    "path": [
                        "webservice",
                        "rest",
                        "server.php"
                    ]
                },
                "description": "Creates a new user with manually specified password"
            }
        },
