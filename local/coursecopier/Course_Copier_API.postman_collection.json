	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Pre-request script để kiểm tra environment variables",
					"if (!pm.environment.get('moodle_url')) {",
					"    console.log('Warning: moodle_url environment variable not set');",
					"    console.log('Please set moodle_url in your environment (e.g., https://yourmoodle.com)');",
					"}",
					"if (!pm.environment.get('ws_token')) {",
					"    console.log('Warning: ws_token environment variable not set');",
					"    console.log('Please create a web service token in Moodle admin and set it in environment');",
					"}"
				]
			}
		},
