{
	"info": {
		"_postman_id": "course-copier-api",
		"name": "Course Copier API - JSON Clone Course",
		"description": "API collection for Moodle Course Copier plugin - Clone course với JSON body và token",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
