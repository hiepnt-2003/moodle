{{!
    @template report_useractivitylog/activity_table

    User Activity Log Table Template.

    Context variables required for this template:
    * logs - Array of log entries
    * headers - Table headers
}}

<div class="report-useractivitylog-results">
    {{#logs}}
    <div class="mb-3">
        <h4>{{#str}}reporttitle, report_useractivitylog{{/str}} ({{count}} {{#str}}records{{/str}})</h4>
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover report-useractivitylog-table">
            <thead>
                <tr>
                    {{#headers}}
                    <th scope="col">{{.}}</th>
                    {{/headers}}
                </tr>
            </thead>
            <tbody>
                {{#entries}}
                <tr>
                    <td class="report-useractivitylog-time">{{time}}</td>
                    <td class="report-useractivitylog-username">{{fullname}}</td>
                    <td>{{affecteduser}}</td>
                    <td>{{eventcontext}}</td>
                    <td class="report-useractivitylog-component">{{component}}</td>
                    <td>{{eventname}}</td>
                    <td class="report-useractivitylog-description">{{description}}</td>
                    <td>{{origin}}</td>
                    <td class="report-useractivitylog-ip">{{ipaddress}}</td>
                </tr>
                {{/entries}}
                {{^entries}}
                <tr>
                    <td colspan="9" class="report-useractivitylog-no-data">
                        {{#str}}nodata, report_useractivitylog{{/str}}
                    </td>
                </tr>
                {{/entries}}
            </tbody>
        </table>
    </div>
    {{/logs}}
    {{^logs}}
    <div class="alert alert-info">
        {{#str}}nodata, report_useractivitylog{{/str}}
    </div>
    {{/logs}}
</div>